extends layout.pug

block content
    h1 Update Book
    form(method='post' action=`/books/${book.id}`)
        p
            label(for='title') Title
            input#title(name='title' type='text' value=`${book.title}` required)
        p
            label(for='author') Author
            input#author(name='author' type='text' value=`${book.author}` required)
        p
            label(for='genre') Genre
            input#genre(name='genre' type='text' value=`${book.genre}` required)
        p
            label(for='year') Year
            input#year(name='year' type='text' value=`${book.year}` required)
        p
            input(type='submit' value='Update Book')
    form(method='post' action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href='/books') Cancel
        p
            input(type='submit' value='Delete Book')